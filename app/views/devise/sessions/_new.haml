= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.email_field :email, autofocus: true, class:"mdl-textfield__input"
    = f.label :email, class:"mdl-textfield__label grey-text"

  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.password_field :password, class:"mdl-textfield__input", autocomplete: "off"
    = f.label :password, class:"mdl-textfield__label grey-text"

  -if devise_mapping.rememberable?
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.text-left
      = f.label "Recuérdame"
      = f.check_box :remember_me


  .top-space
    = f.submit "Iniciar sesión", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
.top-space
  = render "devise/shared/links"
